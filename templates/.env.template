# MCP-JIRA Integration Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git - it contains sensitive credentials

# JIRA Server Configuration
JIRA_URL=https://your-jira-server.com
JIRA_PERSONAL_TOKEN=your_personal_access_token_here
JIRA_SSL_VERIFY=false

# Optional: Project filtering (comma-separated)
# Limits queries to specific projects for better performance
JIRA_PROJECTS_FILTER=ECAPP,PROJECT2,PROJECT3

# Optional: Debug and logging settings
DEBUG=false
LOG_LEVEL=INFO

# Optional: Timeout settings (in seconds)
JIRA_TIMEOUT=30
DOCKER_TIMEOUT=60

# Optional: Custom Docker image tag
# MCP_ATLASSIAN_IMAGE=ghcr.io/sooperset/mcp-atlassian:latest
